@model IEnumerable<KC_MGMT_ASPClient.Models.Ingredient>

@{
    ViewBag.Title = "Состав продукта";
}

<h2>Состав продукта " @ViewBag.FinProdCurName"</h2>

<text>
        @ViewBag.IngredientException
</text>

<table class="table">
    <tr>
        <th>Сырье</th>
        <th>Количество</th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.IngredientView)
    {
        <tr>
            <td>
                @item["raw_name"]
            </td>
            <td>
                @item["quantity"]
            </td>
        </tr>
    }

</table>

<div>
    <a href="/FinishedProducts/Index" class="btn btn-info" role="button">Назад</a>
</div>

